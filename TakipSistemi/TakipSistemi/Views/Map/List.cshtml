@model IEnumerable<TakipSistemi.Models.Entities.RoadRoute>

<div class="container">
    <div class="row">
        <div class="col-sm" style="background-color:antiquewhite">
            <p>
                <a class="btn btn-info   m-1" style="text-decoration:none" asp-controller="Map" asp-action="Create" role="button">New Route</a>
            </p>
        </div>
        <div class="col-sm" style="background-color:antiquewhite">
           
            <p class="d-flex justify-content-end" >
                <a class="btn btn-info   btn-lg m-1" style="text-decoration:none" href="List" role="button">Refresh List</a>
            </p>
        </div>

    </div>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RouteName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) 
    {
        <tr>
            <td>
                <div class="container p-0" style="background-color:burlywood">
                    @Html.DisplayFor(modelItem => item.RouteName)
                </div>    
            </td>
            <td>
                <div class="row" >
                    <div class="d-flex justify-content-end">
                        <a class="btn btn-info   m-1" style="text-decoration:none" asp-controller="Map" asp-action="Details" asp-route-id="@item.RouteId" role="button">Details</a>
                        <a class="btn btn-danger   m-1" style="text-decoration:none" asp-controller="Map" asp-action="Delete" asp-route-id="@item.RouteId" role="button">Delete</a>
                    </div>
                </div>

            </td>
        </tr>
    }
    </tbody>
</table>
