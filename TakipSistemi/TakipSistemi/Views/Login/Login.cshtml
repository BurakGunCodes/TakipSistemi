@model TakipSistemi.Models.LoginData



<div class="row">
    <div class="col-md-4">
        <form>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmailAddr" class="control-label"></label>
                <input type="email" asp-for="EmailAddr" class="form-control" placeholder="Email Address"/>
                <span asp-validation-for="EmailAddr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" class="form-control" id="password" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-flex flex-row-reverse">
                <div class="p-2">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" onclick="ShowPassword()" value="" id="flexCheckDefault">
                        <label class="form-check-label" for="flexCheckDefault"> Show Password </label>
                    </div>
                </div>
            </div>

            <div class="alert-warning">
                @TempData["message"]
            </div>


            <div class="container">
                <div class="row">

                    <div class="col" style="background-color:lightgray">
                        <input formaction="Login" formmethod="post" type="submit" value="Sing In" class="btn btn-primary"  />
                    </div>

                    <div class="col" style="background-color:lightpink">
                        <a asp-controller="Login" asp-action="Register">
                            <input type="button" value="Sign Up" class="btn btn-primary" />
                        </a>
                    </div>

                </div>
                
            </div>
        </form>

      


       @* <input asp-action="Register" asp-controller="Login"  type="submit" value="Sign Up" class="btn btn-primary" />*@
    </div>
</div>


<script src="~/js/login.js">  </script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
