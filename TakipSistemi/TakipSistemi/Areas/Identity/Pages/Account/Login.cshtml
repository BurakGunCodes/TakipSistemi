@page
@model LoginModel

@{
    ViewData["Title"] = "Welcome to Tracking System";
}

<h3>@ViewData["Title"]</h3>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
              
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" id="password" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="d-flex flex-row-reverse">
                <div class="p-2">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" onclick="ShowPassword()" value="" id="flexCheckDefault">
                        <label class="form-check-label" for="flexCheckDefault"> Show Password </label>
                    </div>
                </div>
                </div>

                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>

            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2" >
      @*  <img src="/Image/wallpaper.png" alt="" >*@

    </div>
</div>

<script type="text/javascript">
    function ShowPassword() {
        var x = document.getElementById("password");
        if (x.type === "password") {
            x.type = "text";
        }
        else {
            x.type = "password";
        }
    }
</script>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
